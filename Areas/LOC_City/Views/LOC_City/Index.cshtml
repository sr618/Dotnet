    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>City Name</th>
                        <th>City Code</th>
                        <th>State Name</th>
                        <th>Country Name</th>
                        <th>Acrions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>@dr["CityName"]</td>
                            <td>@dr["CityCode"]</td>
                            <td>@dr["StateName"]</td>
<td>@dr["CountryName"]</td> 
                            <td>
                                <form method="post" asp-action="AddEditCity" asp-area="LOC_City" asp-controller="LOC_City">
                                    <input type="hidden" name="id" value="@Convert.ToInt64(@dr["CityId"])" />
                                    <button type="submit" class="btn btn-primary"></button>
                                </form>

                                <form method="post" asp-action="Delete" asp-area="LOC_City" asp-controller="LOC_City">
                                    <input type="hidden" name="id" value="@Convert.ToInt64(@dr["CityId"])" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"></button>
                                </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

