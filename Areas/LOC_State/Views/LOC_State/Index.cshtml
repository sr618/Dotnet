@using System.Data;
@model DataTable;
<a type="button" asp-action="AddEditState" asp-area="LOC_State" asp-controller="LOC_State" class="btn btn-info add-new"><i class="fa fa-plus"></i> Add New</a>

<span class="icon text-white-50">
    <i class="fa fa-plus-square" aria-hidden="true"></i>
</span>
<span class="text">Add New</span>
</a>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>State Name</th>
                    <th>State Code</th>
                    <th>Country Name</th>
                    <th>Acrions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {
                    <tr>
                        <td>@dr["StateName"]</td>
                        <td>@dr["StateCode"]</td>
                        <td>@dr["CountryName"]</td>
                        <td>
                            <form method="post" asp-action="AddEditState" asp-area="LOC_State" asp-controller="LOC_State">
                                <input type="hidden" name="id" value="@Convert.ToInt64(@dr["StateId"])" />
                                <button type="submit" class="btn btn-primary"></button>
                            </form>

                            <form method="post" asp-action="Delete" asp-area="LOC_State" asp-controller="LOC_State">
                                <input type="hidden" name="id" value="@Convert.ToInt64(@dr["StateId"])" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');"></button>
                            </form>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

