@using System.Data;
@model DataTable;
<a type="button" asp-action="StudentAddEdit" asp-area="LOC_Student" asp-controller="LOC_Student" class="btn btn-info add-new"><i class="fa fa-plus"></i> Add New</a>

<span class="icon text-white-50">
    <i class="fa fa-plus-square" aria-hidden="true"></i>
</span>
<span class="text">Add New</span>
</a>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Student ID</th>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Branch</th>
                            <th>City</th>
                            <th>Created Date</th>
                            <th>Modified Date</th>
                            <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {  <tr>
                                        <td>@row["StudentID"]</td>
                                        <td>@row["StudentName"]</td>
                                        <td>@row["Email"]</td>
                                        <td>@row["BranchID"]</td>
                                        <td>@row["CityID"]</td>
                                        <td>@row["Created"]</td>
                                        <td>@row["Modified"]</td>
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <div class="form-group mr-2">
                                                    <form method="post" asp-controller="LOC_Student" asp-action="StudentAddEdit">
                                                        <input type="hidden" name="StudentID" value="@row["StudentID"]">
                                                        <input type="submit" class="btn btn-inverse-warning btn-fw" value="Edit" />
                                                    </form>
                                                </div>
                                                <div class="form-group mr-2">
                                                    <form method="post" asp-controller="LOC_Student" asp-action="DeleteStudent">
                                                        <input type="hidden" name="StudentID" value="@row["StudentID"]">
                                                        <button type="submit" class="btn btn-inverse-danger btn-fw">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

